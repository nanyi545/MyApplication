<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test1.nh.com.demos1.activities.DrawerActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/thread_tv1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/thread_tv2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <TextView
            android:id="@+id/thread_tv3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <TextView
            android:id="@+id/thread_tv4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <Button
            android:id="@+id/thread_B1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="RUN"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></Button>



    </LinearLayout>


</RelativeLayout>
