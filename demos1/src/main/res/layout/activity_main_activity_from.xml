<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity_from"
    android:id="@+id/rl1">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/textView1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send log"
        android:textSize="25sp"
        android:id="@+id/button1"
        android:background="#88882233"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to..."
        android:id="@+id/button2"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:textSize="15sp" >
    </Button>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:scaleType="matrix"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog"
        android:id="@+id/button3"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start anim"
        android:id="@+id/button_anim"
        android:layout_below="@+id/button3">
    </Button>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_anim_test"
        android:layout_below="@+id/button_anim"
        android:src="@drawable/basketbal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_arraytest"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_formatTest"
        android:layout_below="@+id/button3"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="jp(a1)"
        android:id="@+id/button4"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/button2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="jp(a2)"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="MDac"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="actionBarActivity"
        android:id="@+id/button20"
        android:layout_alignTop="@+id/iv_anim_test"
        android:layout_alignRight="@+id/editText_formatTest"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="actionBar-ok"
        android:id="@+id/button21"
        android:layout_below="@+id/button20"
        android:layout_alignLeft="@+id/button20" />

</RelativeLayout>
